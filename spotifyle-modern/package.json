{
  "name": "spotifyle-modern",
  "version": "1.0.0",
  "description": "Modern Spotify gamification platform",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:setup": "./scripts/setup-db.sh",
    "db:generate": "pnpm --filter @spotifyle/database db:generate",
    "db:push": "pnpm --filter @spotifyle/database db:push",
    "db:migrate": "pnpm --filter @spotifyle/database db:migrate",
    "db:studio": "pnpm --filter @spotifyle/database db:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^1.13.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
